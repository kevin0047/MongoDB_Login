<UserControl x:Class="MongoDB_Login.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Username TextBox -->
            <TextBlock Text="Username" Margin="10"/>
            <TextBox Width="200" Margin="10" Text="{Binding Username}" />

            <!-- Password PasswordBox -->
            <TextBlock Text="Password" Margin="10"/>
            <PasswordBox Width="200" Margin="10" x:Name="PasswordBox" />

            <!-- Additional Info TextBox -->
            <TextBlock Text="Additional Info" Margin="10"/>
            <TextBox Width="200" Margin="10" Text="{Binding AdditionalInfo}" />

            <!-- Register Button -->
            <Button Width="200" Margin="10" Content="Register" Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
